doctype html
html
    include includes/headerAdmin
    //include includes/head
    body.jumbotron
        div.container
            form(method="post", action="/admin/validLogin", class="form-signin")
                h2.form-signin-heading Sign in

                label(for="identi") Ident :
                input#identi(type="text", class="form-control input-block-level", name="ident")

                label(for="pwd") MDP :
                input#pwd(type="password", class="form-control input-block-level", name="pwd")

                input(type="submit", class="btn btn-large btn-primary")
style
    |body {
    |    padding-top: 40px;
    |    padding-bottom: 40px;
    |    background-color: #f5f5f5;
    |}

    |.form-signin {
    |    max-width: 300px;
    |    padding: 19px 29px 29px;
    |    margin: 0 auto 20px;
    |    background-color: #fff;
    |    border: 1px solid #e5e5e5;
    |    -webkit-border-radius: 5px;
    |    -moz-border-radius: 5px;
    |    border-radius: 5px;
    |    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    |    -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
    |    box-shadow: 0 1px 2px rgba(0,0,0,.05);
    |}
    |.form-signin .form-signin-heading,
    |.form-signin .checkbox {
    |    margin-bottom: 10px;
    |}
    |.form-signin input[type="text"],
    |.form-signin input[type="password"] {
    |    font-size: 16px;
    |    height: auto;
    |    margin-bottom: 15px;
    |    padding: 7px 9px;
    |}